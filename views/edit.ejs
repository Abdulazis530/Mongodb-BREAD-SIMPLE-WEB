<section class="filter">
  <h2>Edit Data</h2>
  <form action="/edit" method="POST">
    <div class="container forms">


      <!-- start of string -->
      <div class="row">
        <div class="col-sm-2">

          <label for="string" class="col-sm-2 col-form-label">String</label>
        </div>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="string" name="string" placeholder="<%= string %>"
            autocomplete="off" />
        </div>
      </div>
      <!-- start of integer -->
      <div class="row">
        <div class="col-sm-2">

          <label for="integer" class="col-sm-2 col-form-label">Integer</label>
        </div>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="integer" name="intData" autocomplete="off"
            placeholder="<%= intData %>" />
        </div>
      </div>
      <!-- start of float -->
      <div class="row">
        <div class="col-sm-2">

          <label for="float" class="col-sm-2 col-form-label">Float</label>
        </div>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="float" name="floatType" autocomplete="off"
            placeholder="<%= floatType %>" />
        </div>
      </div>
      <!-- start of date -->
      <div class="row">
        <div class="col-sm-2">

          <label for="date" class="col-sm-2 col-form-label">Date</label>
        </div>
        <div class="col-sm-4">
          <input type="date" class="form-control" id="date" name="tanggal" autocomplete="off"
            placeholder="<%= tanggal %> " />

        </div>
      </div>


      <!-- start of bolean -->
      <div class="row">
        <div class="col-sm-2">

          <label for="float" class="col-sm-2 col-form-label">Boolean</label>
        </div>
        <div class="col-sm-10">
          <select name="bool" class="custom-select mr-sm-2" id="bolean">
            <option selected>
              <p class="op-selected"><%= bool %> </p>
            </option>
            <option value="true">
              <p class="op-selected">True</p>
            </option>
            <option value="false">
              <p class="op-selected">False</p>
            </option>
          </select>
        </div>
      </div>

      <!-- end of container -->
    </div>
    <button type="submit" name="_id" value="<%=_id%> " class="btn-input btn btn-info">Submit</button>
  </form>
</section>
<%- include('footer'); -%>